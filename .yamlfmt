---
# yamlfmt configuration file
# https://github.com/google/yamlfmt
# https://github.com/google/yamlfmt/blob/main/docs/config-file.md#command
doublestar: true
continue_on_error: false
gitignore_excludes: true
match_type: doublestar
# include: []
# - "**/*.{yaml,yml,yamlfmt}"
exclude:
- "powerdns/templates/*"  # exclude Helm templates
extensions:
- .yaml
- .yml
- .yamlfmt
# https://github.com/google/yamlfmt/blob/main/docs/config-file.md#basic-formatter
formatter:
  type: basic
  include_document_start: true
  indent: 2
  indentless_arrays: true
  # array_indent: 2  # same as indent by default
  # https://github.com/google/yamlfmt/blob/main/docs/config-file.md#max_line_length
  # max_line_length: 160  # disabled by default
  pad_line_comments: 2
  force_array_style: block
  force_quote_style: double
  retain_line_breaks: false
  retain_line_breaks_single: true
  scan_folded_as_literal: true
